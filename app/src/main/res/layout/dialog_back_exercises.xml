<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/alfa_slab_one"
            android:textColor="@color/Red"
            android:text="@string/backDialog"/>

        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/White"
            android:id="@+id/pull_ups_btn"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:background="@drawable/muscle_button_background"
            android:text="@string/pull_ups"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/White"
            android:id="@+id/reverse_grip_pull_downs_btn"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:background="@drawable/muscle_button_background"
            android:text="@string/reverse_grip_pull_ups"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/White"
            android:id="@+id/straight_arm_push_downs_btn"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:background="@drawable/muscle_button_background"
            android:text="@string/straight_arm_push_downs"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/White"
            android:id="@+id/upper_back_row_btn"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:background="@drawable/muscle_button_background"
            android:text="@string/upper_back_row"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/goBack_btn"
            android:layout_width="150dp"
            android:layout_height="42dp"
            android:background="@drawable/muscle_button_background"
            android:textColor="@color/White"
            android:text="@string/back"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:drawableRight="@drawable/backwards_btn_icon"
            android:paddingRight="16dp"
            android:fontFamily="@font/alfa_slab_one"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </RelativeLayout>
</RelativeLayout>