<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_video">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        tools:ignore="RtlHardcoded">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="90dp"
            android:baselineAlignBottom="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/jiren_lower_body"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/alfa_slab_one"
        android:text="@string/lower_body"
        android:textColor="@color/Red"
        android:textSize="40sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        tools:ignore="RtlHardcoded">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/quadriceps_btn"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="@drawable/muscle_button_background"
            android:drawableRight="@drawable/quadricepss_btn_icon"
            android:paddingRight="25dp"
            android:textColor="@color/White"
            android:text="@string/quadriceps"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/alfa_slab_one"
            tools:ignore="RtlSymmetry" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/glutes_btn"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginTop="195dp"
            android:background="@drawable/muscle_button_background"
            android:drawableRight="@drawable/glutes_btn_icon"
            android:paddingRight="25dp"
            android:textColor="@color/White"
            android:text="@string/glutes"
            android:fontFamily="@font/alfa_slab_one"
            tools:ignore="RtlSymmetry" />
    </RelativeLayout>

</RelativeLayout>